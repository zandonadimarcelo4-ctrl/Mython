define clean_text(text):
    # Remove espaços no final
    set text = text.strip()
    # Remove números
    # (usando Python puro para regex)
    import re
    set text = re.sub(r'\d+', '', text)
    # Torna minúsculo
    set text = text.lower()
    return text

set sample = "Hello World 123"
set cleaned = clean_text(sample)
say "Original: " + sample
say "Cleaned: " + cleaned

