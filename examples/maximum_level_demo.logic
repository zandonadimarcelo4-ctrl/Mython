define make_chatbot():
    say "Starting chatbot..."
    set running = true
    
    while running:
        ask message "You: "
        if message is "stop":
            set running = false
            say "Goodbye!"
        else:
            say "Bot: I received: " + message

say "Chatbot demo (type 'stop' to exit):"
