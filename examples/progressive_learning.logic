save text "Hello from Mython!" to file "test_output.txt"
say "File saved!"

read file "test_output.txt" as content
say "File content: " + content

# ============================================
# NÍVEL 5: Classes
# ============================================
say ""
say "=== NÍVEL 5: Classes ==="

class Person:
    init(name, age):
        set self.name = name
        set self.age = age
    
    task introduce():
        say "Hello, I am " + self.name
        say "I am " + str(self.age) + " years old"
    
    task have_birthday():
        set self.age = self.age + 1
        say "Happy birthday! Now I am " + str(self.age)

set person = Person("Alice", 25)
person.introduce()
person.have_birthday()
person.introduce()

